<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_list_news"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainNewsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="4dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/newsImage"
            android:layout_width="125dp"
            android:layout_height="140dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_1"
            />
        <TextView
            android:id="@+id/news_title"
            android:layout_width="149dp"
            android:layout_height="60dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/newsImage"
            android:text="Title News"
            android:textColor="@color/green"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_data"
            android:layout_width="73dp"
            android:layout_height="53dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/news_title"
            android:gravity="end"
            android:text="Data"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/news_short_description"
            android:layout_width="222dp"
            android:layout_height="74dp"
            android:layout_below="@id/news_title"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/newsImage"
            android:text="Description"
            android:textColor="@color/black"

            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>